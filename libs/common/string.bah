//Used for splitting a string into multiple substrings delimited by the specified delimiter.
splitString(s string, sp cpstring) []string {
    sep = string(sp)
    res = []string
    sepBuffer = string("")
    sepIndex = 0
    i = 0
    replcBuff = string("")
    tmpString = []char


    for i < s.length {
        c = s.charAt(i)
        sepc = sep.charAt(sepIndex)
        if sepIndex == sep.length {
            replcBuff.set("")
            elem = new string
            elem.set(arrToStr(tmpString))
            lenRes = len(res)
            res[lenRes] = *elem
            clear(tmpString)
            sepIndex = 0
        }
        
            if c == sepc {
                sepIndex = sepIndex + 1
